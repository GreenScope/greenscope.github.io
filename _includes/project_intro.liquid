<div class="Intro">
  {% if include.img %}
    <div class="Icon">
      {% include figure.liquid path=include.img max-height="250px" max-width="250px" width="auto" style="margin: auto;" class='img-fluid z-depth-1
      rounded' %}
    </div>
    <hr class="vertical-hr">
  {% endif %}

  <div class="Info">
    <h1 class="Title">{{ include.title }}</h1>
    <div class="TechIconsBox">
      {% for icon in include.icons %}
        <div class="TechIcon">
          {% include tech_icon.liquid site=icon.site file=icon.file %}
        </div>
      {% endfor %}
    </div>
    <p class="Description">{{ include.description }}</p>
  </div>
</div>